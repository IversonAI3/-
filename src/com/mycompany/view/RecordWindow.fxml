<AnchorPane prefHeight="701.0" prefWidth="594.0" stylesheets="@RegisterWindow.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.controller.RecordWindowController">
