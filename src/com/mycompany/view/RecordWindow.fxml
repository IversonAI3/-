      <VBox prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label alignment="CENTER" prefHeight="64.0" prefWidth="594.0" style="-fx-background-color: orange;" text="借书记录" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="21.0" />
               </font>
            </Label>
            <MenuButton fx:id="menuButton" alignment="CENTER" mnemonicParsing="false" prefHeight="45.0" prefWidth="594.0" text="选择显示条目">
